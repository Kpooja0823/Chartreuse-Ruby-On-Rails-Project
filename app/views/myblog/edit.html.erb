<h1> Edit blog</h1>
<%= bootstrap_form_with model: @allblog, url: update_myblog_path, method: :post, data: { turbo: false } do |form| %>

  <div class="form-group">
    <%= form.text_field :cupcake_name, class: 'form-control' %>
  </div>

   <div class="form-group">
    <%= form.text_field :cupcake_category, class: 'form-control' %>
  </div>
    <div class="form-group">
    <%= form.text_field :blog_description, class: 'form-control' %>
  </div> 
   <div class="form-group">
    <%= form.text_field :location, class: 'form-control' %>
  </div> 
   <div class="form-group">
    <%= form.text_field :cupcake_recipe_title, class: 'form-control' %>
  </div> 
   <div class="form-group">
    <%= form.text_field :cupcake_recipe_description, class: 'form-control' %>
  </div>
   <div>
    <%= form.check_box :published %>
  </div>
 <div class="form-group">
    <%= form.datetime_field :published_at, class: 'form-control' %>
  </div>
    <div class="form-group">
    <%= form.file_field :upload_image , class: 'form-control' %>
    <div class= "mt-1">
        <strong> Current Image </strong>
        <% if @allblog.upload_image.present? %>
        <div>
        <%= image_tag(@allblog.upload_image, width: '20%')%>
        </div>
        <%= link_to "Delete", @allblog.upload_image.purge, method: :delete, data: {turbo: :false}, class: "btn btn-danger" %>
        <% end %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-primary btn-block' %>
  </div>
  <br>
<% end %>