<h1>This is my fav</h1>
<div class="d-flex flex-row flex-wrap mb-3">
          <% @favs.each do |fv|%>
          <div class="p-2">
          <div class="d-flex flex-column  mb-3" >
               <div class="p-2 mx-auto"> <%= link_to image_tag(fv.upload_image.persisted? ? fv.upload_image : 'logo.png', height:"130px"),postblog_path(fv)%> </div>
               <div class="p-2 mx-auto"> <%= fv.cupcake_name %> </div>
          </div>
          </div>
          <%end%>
</div>